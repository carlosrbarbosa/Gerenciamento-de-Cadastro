			alert("Digite a descrição do chamado");
			txtdescricao_chamado.focus();
			return false;
			}
						
		if(txtsolucao.value == ""){
			alert("para fechar o chamado primeiramente deve preencher o solução !");
			txtsolucao.focus();
			return false;
			}
		if(txtvalor.value == ""){
			alert("Informe o valor do serviço!");
			txtvalor.focus();
			return false;
			}
		if(txtvalorcomissao.value == ""){
			alert("Informe o valor da comissão, ou digite '0'");
			txtvalorcomissao.focus();
			return false;
			}
		
